<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/postDetails.css" type="text/css" />
  <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
  integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
  crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>


<body>
  <header>
    <%- include('partials/_header') %>
  </header>
  <!-- Card for Resource -->
  <div class="mainContainer" id="detailsContainer">
    <div class="card detailsCard">
      <img src= "<%= resource.thumbnail_photo_url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= resource.title %></h5>
        <p class="card-text"><%= resource.description %></p>
        <a href="<%= resource.url %>"class="btn btn-primary">Go To Resource</a>
          <footer>

          <button class="btn"><i class="far fa-heart"></i></button>
        </footer>
      </div>
    </div>
    <!-- Comment Bar -->
    <div class="commentSection">
      <form class="d-flex" method="post" action="/api/resources/<%=resource.id%>/reviews">
        <input class="form-control me-2" type="comment" placeholder="Comment" name="comment">
        <button class="btn btn btn-outline-primary" type="submit">Submit</button>
      </form>
      <!-- Card for Comments -->

          <ul class="list-group">
          <%for (const review of reviews.reverse()) {%>
              <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                  <div class="fw-bold"><%=review.name %></div>
                  <%= review.comment %>
                </div>
              </li>
              <%}%>
            </ul>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
